FROM golang:1.17-alpine as builder

WORKDIR /go/src/selkies.io/remote-apps
COPY go.* ./
RUN go mod download
COPY . ./

RUN env GOOS=linux GARCH=amd64 CGO_ENABLED=0 go build -o /opt/remote-apps cmd/*.go
